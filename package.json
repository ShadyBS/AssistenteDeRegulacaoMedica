{
  "name": "assistente-de-regulacao-medica",
  "version": "1.0.0",
  "description": "Extensão para auxiliar na regulação médica.",
  "main": "sidebar.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:css:watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:zips": "node build-zips.js",
    "build:all": "npm run build:css && npm run build:zips",
    "release": "node release.js",
    "release:patch": "npm run release -- $(npm version patch --no-git-tag-version | sed 's/v//')",
    "release:minor": "npm run release -- $(npm version minor --no-git-tag-version | sed 's/v//')",
    "release:major": "npm run release -- $(npm version major --no-git-tag-version | sed 's/v//')",
    "validate:manifests": "node -e \"require('./build-zips.js').validateManifest('manifest.json'); require('./build-zips.js').validateManifest('manifest-edge.json'); console.log('✅ Manifests válidos')\"",
    "clean": "rimraf dist-zips dist",
    "dev": "npm run build:css:watch"
  },
  "keywords": [
    "browser-extension",
    "medical-regulation",
    "healthcare",
    "sigss"
  ],
  "author": "ShadyBS",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShadyBS/AssistenteDeRegulacaoMedica.git"
  },
  "bugs": {
    "url": "https://github.com/ShadyBS/AssistenteDeRegulacaoMedica/issues"
  },
  "homepage": "https://github.com/ShadyBS/AssistenteDeRegulacaoMedica#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@octokit/rest": "^20.0.2",
    "archiver": "^7.0.1",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "rimraf": "^5.0.5",
    "semver": "^7.5.4",
    "simple-git": "^3.20.0",
    "tailwindcss": "^3.4.1"
  },
  "optionalDependencies": {
    "sharp": "^0.32.6"
  }
}
