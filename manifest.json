{
  "manifest_version": 3,
  "name": "Assistente de Regulação Médica",
  "version": "4.0.0",
  "description": "Fornece informações para auxiliar médicos reguladores a analisar solicitações e a aderência de pacientes.",
  "permissions": [
    "storage",
    "scripting",
    "contextMenus",
    "clipboardWrite",
    "alarms"
  ],
  "host_permissions": [
    "*://*.gov.br/sigss/*",
    "*://*.mv.com.br/sigss/*",
    "*://*.cloudmv.com.br/sigss/*",
    "http://localhost:*/sigss/*",
    "http://127.0.0.1:*/sigss/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; connect-src 'self' https://*.gov.br https://*.mv.com.br https://*.cloudmv.com.br http://*.gov.br http://*.mv.com.br http://*.cloudmv.com.br http://localhost:* http://127.0.0.1:*; base-uri 'self'; frame-ancestors 'none';"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Abrir Assistente de Regulação",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_title": "Assistente de Regulação",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "open_at_install": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.gov.br/sigss/regulacaoRegulador*",
        "*://*.gov.br/sigss/regulacaoRegulador/*",
        "*://*.gov.br/sigss/regulacaoControleSolicitacao/*",
        "*://*.gov.br/sigss/regulacaoControleSolicitacao*",
        "*://*.mv.com.br/sigss/regulacaoRegulador*",
        "*://*.mv.com.br/sigss/regulacaoRegulador/*",
        "*://*.mv.com.br/sigss/regulacaoControleSolicitacao/*",
        "*://*.mv.com.br/sigss/regulacaoControleSolicitacao*",
        "*://*.cloudmv.com.br/sigss/regulacaoRegulador*",
        "*://*.cloudmv.com.br/sigss/regulacaoRegulador/*",
        "*://*.cloudmv.com.br/sigss/regulacaoControleSolicitacao/*",
        "*://*.cloudmv.com.br/sigss/regulacaoControleSolicitacao*",
        "http://localhost:*/sigss/regulacaoRegulador*",
        "http://localhost:*/sigss/regulacaoRegulador/*",
        "http://localhost:*/sigss/regulacaoControleSolicitacao/*",
        "http://localhost:*/sigss/regulacaoControleSolicitacao*",
        "http://127.0.0.1:*/sigss/regulacaoRegulador*",
        "http://127.0.0.1:*/sigss/regulacaoRegulador/*",
        "http://127.0.0.1:*/sigss/regulacaoControleSolicitacao/*",
        "http://127.0.0.1:*/sigss/regulacaoControleSolicitacao*"
      ],
      "js": [
        "browser-polyfill.js",
        "content-script.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content-script.js",
        "logger.js"
      ],
      "matches": [
        "*://*.gov.br/sigss/*",
        "*://*.mv.com.br/sigss/*",
        "*://*.cloudmv.com.br/sigss/*",
        "http://localhost:*/sigss/*",
        "http://127.0.0.1:*/sigss/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "assistente-regulacD@exemplo.com"
    }
  }
}
